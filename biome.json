{
	"$schema": "https://biomejs.dev/schemas/1.5.1/schema.json",
	"files": {
		"ignore": ["node_modules/"]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"indentWidth": 4
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"trailingComma": "none"
		}
	}
}
